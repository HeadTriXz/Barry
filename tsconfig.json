{
    "compilerOptions": {
        "alwaysStrict": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": ["ES2022"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "newLine": "lf",
        "outDir": "dist",
        "pretty": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2022",
        "types": ["vitest/globals"],
        "verbatimModuleSyntax": true
    },
    "exclude": ["node_modules"]
}
